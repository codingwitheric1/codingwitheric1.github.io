<style is:global>
	.course-content {
		background: rgba(255, 255, 255, 0.1);
		padding: 2rem;
		border-radius: 8px;
	}
	.week-grid {
		display: grid;
		gap: 2rem;
	}
	.week-card {
		background: rgba(255, 255, 255, 0.05);
		padding: 1.5rem;
		border-radius: 8px;
		transition: transform 0.2s;
	}
	.week-card:hover {
		transform: translateY(-5px);
	}
	.week-card h3 {
		color: rgb(var(--accent-light));
		margin-bottom: 1rem;
		font-size: 1.5rem;
	}
	.course-title {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.course-subtitle {
		color: rgb(var(--accent-light));
		text-align: center;
		margin-bottom: 2rem;
	}
	.course-main {
		margin: auto;
		padding: 1rem;
		width: 1000px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.course-list {
		margin-left: 1.5rem;
	}
	.course-list-nested {
		margin-left: 2rem;
		margin-top: 0.5rem;
	}
</style>